mixin Testimonial(title, body, signature, image)
  .flex.flex-col.p-6.bg-black-600.rounded-md.justify-between(class="lg:h-[400px]")
    p.text-lg.text-white-400.font-bold.capitalize(class="lg:text-xl")= title
    p.text-sm.text-white-500.mt-4= body
    p.text-md.text-white-300.font-semibold.mt-4(class="lg:text-md")= signature
    .mt-8
      img.mx-auto(src=image, class="w-[64px]")
