extends ../layout
include ../mixins/Navbar
include ../mixins/WideCard
include ../mixins/TallCard
include ../mixins/Button
include ../mixins/Testimonial
include ../mixins/SectionHeader
include ../mixins/LeadText

block navbar
  +Navbar("consulting")

block header
  .flex.flex-row.mx-auto.w-full.text-white.mt-8(class="lg:mt-16")
    .basis-auto(class="lg:basis-2/3")
      h1.font-bold.text-white-600.text-3xl.text-center(class="lg:text-6xl lg:text-left")
        p Unparalleled Expertise.
        p Unmatched Results.
      h2.text-white-500.text-base.mt-8.mr-4.text-center(class="lg:text-2xl lg:mt-16 lg:mr-8 lg:text-left") Meet our team and explore how our expertise can help your business. Get started today
      .flex.justify-center(class="lg:justify-start")
        +Button("meet our team","/contactus")

    .basis-0(class="lg:basis-1/3")
      img.invisible(src="images/consulting/consulting.png", class="lg:w-[320px] lg:h-[320px] lg:visible")

block body
  +SectionHeader("Services")
  +WideCard("images/consulting/planning.png", "strategic planning", "Navigating Your Business to Greater Efficiency Adaptability, and Success", "With our tailored approach, we help you craft a clear roadmap to your organization's future.","/contactus")
  +WideCard("images/consulting/ops.png", "operation excellence","Streamlining Your Business for Enhanced Quality, Efficiency, and Profitability","We identify opportunities to streamline your operations, improve productivity, and reduce costs.","/contactus")
  +WideCard("images/consulting/transform.png", "business tranformation","Innovating and Adapting for Enhanced Competitiveness and Success","Our team will help you adapt to changing market conditions, prepare for the future, and unlock your business potential.","/contactus")
  +WideCard("images/consulting/talent.png", "leadership and talent development", "Empowering Your Team for Innovation, Engagement, and Success.","We offer solutions for building a resilient, high-performing team that is ready to lead your business forward.","/contactus")
  +WideCard("images/consulting/integration.png", "technology integration","Powering Your Business Towards Efficiency, Innovation, and Security.","Our experts will guide you in harnessing the power of technology to improve your business processes and provide better service to your customers.","/contactus")

  +SectionHeader("Why choose us?")
  .grid.grid-cols-1.gap-4(class="lg:grid-cols-3")
    +TallCard("images/consulting/client.png","CLIENT FOCUSED","We understand that every organization is unique. Our approach is personalized to align with your specific goals and needs.")
    +TallCard("images/consulting/result.png","result driven","We are committed to delivering concrete results. Your success is our success.")
    +TallCard("images/consulting/innovation.png","innovation","In the rapidly evolving business landscape, we stay ahead by continually learning and adopting innovative solutions.")
  .flex.flex-col.gap-4.justify-evenly.mt-4(class="lg:flex-row")
    +TallCard("images/consulting/integrity.png","Integrity","We value honesty and transparency in all our engagements. We work with the utmost integrity and respect for your business.")
    +TallCard("images/consulting/collaboration.png","collaboration","Collaboration is at our core. We unite collective intelligence and teamwork, amplifying results by working together.")
    +TallCard("images/consulting/resilience.png","resilience","Resilience is our response to an ever-changing business landscape. We adapt, overcome, and see every challenge as a chance for growth and learning.")

  +SectionHeader("testimonials")
  .grid.grid-cols-1.gap-4(class="lg:grid-cols-3")
    div(class="lg:col-span-2")
      +Testimonial("Effortless Integration, Outstanding Results", "Our partnership with BitMaple revolutionized our business operations. Their expertise in enterprise application development is truly unmatched. They implemented solutions that drastically improved our efficiency and productivity, leading to operational excellence. We couldn't have achieved this level of success without them", "Steve R. Principal Engineer, T-Mobile", "images/consulting/head-4.png")
