extends layout

block navbar
  .flex.flex-row.mx-auto.max-w-full.text-white.mt-2(class="lg:mt-8")
    div(class="basis-1/2")
      img(src="images/bitmaple.png", class="w-[160px] lg:w-[225px]")
    .text-white-600.hidden(
      class="basis-1/2 lg:flex lg:flex-row lg:justify-between lg:gap-4 lg:items-center")
      .text-xl Publishing
      .text-xl Consulting
      .text-xl Training
      .text-xl Contact Us
    .justify-end.place-items-center.flex.flex-row.w-full.content-end(class="lg:hidden basis-1/2")
      span.material-icons.text-white-400 menu

block header
  .flex.flex-row.mx-auto.max-w-full.text-white.mt-8(class="lg:mt-16")
    .basis-auto(class="lg:basis-2/3")
      h1.font-bold.text-white-600.text-3xl(class="lg:text-6xl")
        p Unparalleled Expertise.
        p Unmatched Results.
      h2.text-white-500.text-base.mt-8.mr-4(class="lg:text-2xl lg:mt-16 lg:mr-8") Meet our team and explore how our expertise can help your business. Get started today
      .bg-brand.rounded-full.flex.justify-center.place-items-center.cursor-pointer.mt-4(
        class="w-[140px] h-[40px] lg:w-[250px] lg:h-[70px] lg:mt-8")
        a.uppercase.inline-block.text-black-500.font-semibold.text-md(
          class="hover:text-white-500 lg:text-lg") Meet our Team

    .basis-0(class="lg:basis-1/3")
      img(src="images/consulting.png", class="w-[320px] h-[320px]")
